# ==============================================
# NEBULA ELEMENTAL BATTLE - Environment Template
# ==============================================
# üìã Copy this file to .env and customize for your setup
# ‚ö†Ô∏è  NEVER commit .env file to git - it's in .gitignore
# ==============================================

# ======================
# Application Settings
# ======================
NODE_ENV=development
PORT=3000

# ======================
# Core Features
# ======================
# Enable AI opponents in single-player mode
REACT_APP_ENABLE_AI_OPPONENTS=true

# Use mock backend (no server required - perfect for GitHub Pages)
REACT_APP_MOCK_BACKEND=true

# Enable debug logging in console (disable in production)
REACT_APP_DEBUG_MODE=false

# Enable PWA features (installable app)
REACT_APP_ENABLE_PWA=true

# Enable security headers
REACT_APP_ENABLE_SECURITY_HEADERS=true

# ======================
# Build Optimization
# ======================
# Disable source maps in production (smaller bundle)
GENERATE_SOURCEMAP=false

# Inline runtime chunk (better caching)
INLINE_RUNTIME_CHUNK=true

# ======================
# Optional: Donations
# ======================
# Uncomment and add your links to enable donation banner
# REACT_APP_ENABLE_DONATIONS=true
# REACT_APP_DONATION_LINKS={"paypal":"https://paypal.me/YourName","kofi":"https://ko-fi.com/YourName","github":"https://github.com/sponsors/YourName"}

# ======================
# Optional: Backend URLs
# ======================
# Only needed if REACT_APP_MOCK_BACKEND=false
# REACT_APP_API_BASE_URL=http://localhost:3001
# REACT_APP_WEBSOCKET_URL=ws://localhost:8080

# ======================
# Optional: Analytics
# ======================
# Google Analytics tracking ID
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry error reporting DSN
# REACT_APP_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ======================
# Optional: CDN
# ======================
# Use CDN for static assets in production
# REACT_APP_CDN_URL=https://cdn.yourdomain.com
# REACT_APP_ASSET_PREFIX=/assets