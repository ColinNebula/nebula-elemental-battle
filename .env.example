# Nebula Elemental Battle - Environment Configuration
# Copy this file to .env and customize for your setup
# NEVER commit .env file to git - it's in .gitignore

# ======================
# Application Settings
# ======================
NODE_ENV=development
PORT=3000
REACT_APP_VERSION=2.0.0

# ======================
# Feature Flags
# ======================
# Enable AI opponents in single-player mode
REACT_APP_ENABLE_AI_OPPONENTS=true

# Enable donation banner and links
REACT_APP_ENABLE_DONATIONS=false

# Enable debug logging in console (disable in production)
REACT_APP_DEBUG_MODE=false

# Use mock backend (no server required)
REACT_APP_MOCK_BACKEND=true

# Enable PWA features
REACT_APP_ENABLE_PWA=true

# ======================
# Game Configuration
# ======================
REACT_APP_MAX_PLAYERS_PER_ROOM=4
REACT_APP_TURN_TIMEOUT_MS=30000
REACT_APP_DEFAULT_DIFFICULTY=medium

# ======================
# Security (Production)
# ======================
REACT_APP_ENABLE_SECURITY_HEADERS=true
REACT_APP_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
REACT_APP_CSP_ENABLED=true

# Rate limiting for API endpoints
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session security (if using backend)
# SESSION_SECRET=generate-random-secret-here
# JWT_SECRET=generate-random-jwt-secret-here
# JWT_EXPIRES_IN=24h

# ======================
# Optional: Backend URLs
# ======================
# Only needed if REACT_APP_MOCK_BACKEND=false
# REACT_APP_API_BASE_URL=http://localhost:3001
# REACT_APP_WEBSOCKET_URL=ws://localhost:8080

# ======================
# Optional: Donations
# ======================
# Only used if REACT_APP_ENABLE_DONATIONS=true
# REACT_APP_DONATION_LINKS={"paypal":"https://paypal.me/yourname","kofi":"https://ko-fi.com/yourname","github":"https://github.com/sponsors/yourname"}

# ======================
# Optional: Analytics
# ======================
# Google Analytics (if needed)
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Error reporting (Sentry, etc.)
# REACT_APP_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ======================
# Optional: CDN
# ======================
# Use CDN for static assets in production
# REACT_APP_CDN_URL=https://cdn.yourdomain.com
# REACT_APP_ASSET_PREFIX=/assets

# ======================
# Build Optimization
# ======================
# Enable source maps in production (not recommended)
# GENERATE_SOURCEMAP=false

# Inline runtime chunk
# INLINE_RUNTIME_CHUNK=true

# Image optimization
# IMAGE_INLINE_SIZE_LIMIT=10000