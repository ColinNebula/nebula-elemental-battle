# npm configuration for security and performance
save-exact=false
package-lock=true
legacy-peer-deps=false
audit=true
fund=false

# Security settings
audit-level=moderate
strict-ssl=true

# Performance
prefer-offline=false
progress=true

# Registry (use official npm registry)
registry=https://registry.npmjs.org/

# Optional: Private registry or scoped packages
# @yourscope:registry=https://npm.pkg.github.com
